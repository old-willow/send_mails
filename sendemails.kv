#:kivy 1.9.0

<Box>:
    orientation: 'vertical'

#    BoxLayout:
#        orientation: 'horizontal'
#        height: 120
#
#        FileChooser:
#            id: fc
#            #FileChooserIconLayout
#            FileChooserListLayout
    file_path_label: file_path_label

    Label:
        text: 'Mass e-mail sender'
        font_size: 70

    # For email message to be sent.
    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'Email Message:'
        TextInput:
            text: 'Type the message in the email\'s body...'

    # for attachement file
    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'Attachment:'
        Label:
            id: file_path_label
            #size_hint_y: .1
            text: '/path/to/the/attachement/file'
        Button:
            text: 'Attach...'
            on_release: root.show_load()

    # for canceling or sending emails
    BoxLayout:
        orientation: 'horizontal'
        #size: 50, 10

        Button:
            id: button_cancel
            #size_hint: 10, 10
            text: "Cancel"
            #spacing: 20
            #padding: 20
            on_press: root.exit()

        Button:
            id: button_send
            #size_hint: 10, 10
            text: "Send"
            #opacity: 0.5
            disabled: 1

            #spacing: 20
            #padding: 20

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Attach"
                on_release: root.load(filechooser.path, filechooser.selection)




